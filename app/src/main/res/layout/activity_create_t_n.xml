<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreateTNActivity">
    <LinearLayout
        android:id="@+id/firstRowCreateTNA"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/icons8_squared_menu_64"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </ImageView>
    </LinearLayout>
    <LinearLayout
        android:layout_below="@+id/firstRowCreateTNA"
        android:orientation="vertical"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:hint="Tara"
            android:textSize="18sp"
            android:layout_marginBottom="15dp"
            android:textColorHint="@color/grey"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </EditText>
        <EditText
            android:hint="Regiune"
            android:textSize="18sp"
            android:layout_marginBottom="15dp"
            android:textColorHint="@color/grey"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </EditText>
        <EditText
            android:hint="Oras / Sat"
            android:textSize="18sp"
            android:layout_marginBottom="15dp"
            android:textColorHint="@color/grey"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </EditText>
        <EditText
            android:hint="Strada"
            android:textSize="18sp"
            android:layout_marginBottom="15dp"
            android:textColorHint="@color/grey"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </EditText>
        <EditText
            android:hint="Denumirea / Numarul Casei"
            android:textSize="18sp"
            android:layout_marginBottom="15dp"
            android:textColorHint="@color/grey"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </EditText>
        <EditText
            android:hint="Scara"
            android:textSize="18sp"
            android:layout_marginBottom="15dp"
            android:textColorHint="@color/grey"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </EditText>
        <EditText
            android:hint="Etaj"
            android:textSize="18sp"
            android:layout_marginBottom="15dp"
            android:textColorHint="@color/grey"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </EditText>
        <EditText
            android:hint="Apartament"
            android:textSize="18sp"
            android:layout_marginBottom="15dp"
            android:textColorHint="@color/grey"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </EditText>
        <EditText
            android:hint="Plus Code"
            android:textSize="18sp"
            android:layout_marginBottom="15dp"
            android:textColorHint="@color/grey"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </EditText>
        <Button
            android:background="@color/white"
            android:textSize="20sp"
            android:padding="20sp"
            android:layout_marginTop="5dp"
            android:layout_gravity="center"
            android:text="URMATORUL PASS "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </Button>
    </LinearLayout>
</RelativeLayout>